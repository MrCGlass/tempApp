<AccountPage>:
	orientation: 'vertical'
	job_button:job_button
	name: 'acctpage'
	search_button:search_button
	exit_button:exit_button.__self__
	user_image:user_image
	main_button:main_button
	exit_button: exit_button.__self__
	BoxLayout:
		id:mainlayout
		acct_info: acct_info
		job_info: job_info
		BoxLayout:
			id: acct_info
			size_hint_x: .40
			orientation: 'vertical'
			Label:
				text: app.root.user_name
				size_hint_y: .05
		
			BoxLayout:
				id:user_image
				size_hint_y: .35
			
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: .60
				Label:
				
					text: 'About Info'
				
		BoxLayout:
			id:job_info
			
