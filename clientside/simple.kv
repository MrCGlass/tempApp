				size_hint_y: None
				height: 44
				id:main_button
				text: 'menu'
				

					
			RecycleView:
				
			BoxLayout:
				size_hint_y: .15
				Button:
					size_hint_y: None
					id:exit_button
					height: 44
					text:'Exit'
					on_press: root.parent.pageReturn(page=root.name)
				Button:
					size_hint_y: None
					height:44
					id: search_button
					text: 'Search Jobs'
					on_press: root.parent.getPress(self)
					
				Button:
					size_hint_y: None
					height: 44
					id: job_button
					text: 'New Job'
					on_press: root.parent.getPress(self)

			
<SearchScreen>:
	orientation: 'vertical'
	id:search_screen
	search_input:search_input
	search_results:search_results
	info_label: info_label
	name:'searchscreen'
	BoxLayout:
		size_hint_y: .10
		orientation: 'vertical'
		Label:
			text: 'Job Search'
			size_hint_y: .25
		Label:
			text:
			id: info_label
			size_hint_y: .25
			
		BoxLayout:
			size_hint_y: .50
			TextInput:
				id:search_input
				multiline: False
			Button:
				text: 'Search'
				on_press: root.parent.getPress(self)
			Button:
				text: 'All Categories'
				on_press: root.parent.getPress(self)

	ListView:
		id: search_results
		item_stings:['index','']
		adapter:
			ListAdapter(data=[],cls=simple.JobListbutton,args_converter=search_screen.args_converter)
		size_hint_y: .80
		pos: 100,0
	
	Button:
		id: exit_button
		text:'Exit'
		size_hint_y: .10
		on_press: root.parent.pageReturn(page=root.name)
		
<JobListbutton>:
	text: '{}'.format(self.jobs)
	on_press: app.root.getPress(self)
	


