		text: 'Welcome'
	Label:
		id: info_label
		text:	
		
		
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Username'
		TextInput:
			id: name_input
			size_hint_x: .50
			multiline: False
			
		Label:
			text: 'Password'
			
